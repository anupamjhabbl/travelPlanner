<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TripPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.Splash.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_background_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_logo</item>
        <item name="splashScreenIconSize">200dp</item>
        <item name="postSplashScreenTheme">@style/Theme.TripPlanner</item>
    </style>
</resources>